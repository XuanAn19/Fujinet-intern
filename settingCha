            <th><bean:write name="column"/></th>
        </logic:iterate>
    </tr>
    <logic:iterate id="customer" name="T002Form" property="customers">
        <tr>
            <logic:iterate id="column" name="T002Form" property="visibleColumns">
                <td><bean:write name="customer" property="<%= column %>"/></td>
            </logic:iterate>
        </tr>
    </logic:iterate>
